<h2 style="color:crimson;">Listado de Productos</h2>

<% if(productos.length > 0){ %> 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Titulo</th> <th>Precio</th> <th>Miniatura</th> <th>Id</th> </tr>
            <!-- filas -->
            <% for (const producto of productos) {%> 
            <tr> 
                <td><%=producto.Titulo %> </td>
                <td><%=producto.Precio %> </td>
                <td><%=producto.Miniatura %> </td>
                <td><%=producto.Id %> </td>
            </tr>
            <% } %> 
            <!-- Fin filas -->
        </table>
    </div>
<% } else { %> 
    <h3 class="alert alert-danger">No se encontraron dato</h3>
<% } %> 